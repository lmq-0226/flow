		created() {
			
		},
		methods:{
			closePopup(){
				// #ifdef APP-PLUS
				// 通过 id 获取 nvue 子窗体
				const subNVue = uni.getSubNVueById('comment')  
				// 关闭 nvue 子窗体  
				subNVue.hide('slide-out-bottom', 300, function(){});
				// #endif
			},
			// 动态设置输入框的位置，防止获取焦点，页面顶起
			boarChange(e){
				this.bottom = e.detail.height
			},
			// 加载更多回复
			loadingMore(e){
				e.loading = true
				let timer = setTimeout(()=>{
					e.loading = false
					// 模拟数据请求
					this.commentsList.forEach(elem=>{
						if(elem.id == e.id){
							for(let i = 0; i <= 1; i ++){
								elem.replyList.push({
									rid: elem.replyList.length + 1,
									rPraise: false,
									rPraiseNum: 25
								})
							}
						}
					})
					
					this.$forceUpdate()
					clearTimeout(timer)
				},2000)
			},
			// nvue事件获取焦点，并且显示遮罩
			focus(e){
				this.$refs.input.focus()
				this.maskShow = true
			},
			// 监听键盘发送按钮
			send(e){
				console.log(e)
			},
			// 隐藏遮罩取消焦点
			maskHide(){
				this.$refs.input.blur()
				this.maskShow = false
			},
			// list触底加载
			scrollEnd(){
				this.status = 'loading'
				let timer = setTimeout(()=>{
					for(let i = 0; i <= 1; i ++){
						this.commentsList.push({
							id: this.commentsList.length + 1,
							praise: false,
							praiseNum: 15,
							loading: false,
							replyList: [
								{
									rid: 1,
									rPraise: false,
									rPraiseNum:20
								},
								{
									rid: 2,
									rPraise: false,
									rPraiseNum:20
								},
								{
									rid: 3,
									rPraise: false,
									rPraiseNum:20
								}
							]
						})
					}
					this.status = 'more'
					this.$refs['list'].resetLoadmore();
					clearTimeout(timer)
				}, 2000)
			}
		}
	}
