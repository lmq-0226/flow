.content .tabs {
  border-bottom: solid 10rpx #F6F5FA;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  background: #fff;
  z-index: 999;
}
.content .list .item {
  padding: 0 36rpx 0;
  border-bottom: solid 10rpx #F6F5FA;
}
.content .list .item .title {
  padding: 19rpx 8rpx;
  border-bottom: solid 1px #F2F2F6;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .list .item .title view {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.content .list .item .title view image {
  width: 34rpx;
  height: 34rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
}
.content .list .item .title view text {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #000000;
}
.content .list .item .title > text {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #86868F;
}
.content .list .item .title .ing {
  color: #FF4243;
}
.content .list .item .goods {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 28rpx 0;
  position: relative;
}
.content .list .item .goods .avatar {
  margin-right: 20rpx;
}
.content .list .item .goods .avatar image {
  width: 164rpx;
  height: 164rpx;
}
.content .list .item .goods view {
  height: 164rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.content .list .item .goods view > :nth-child(1), .content .list .item .goods view > :nth-child(2) {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #000000;
}
.content .list .item .goods view > :nth-child(3) {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FF4243;
}
.content .list .item .goods .status {
  position: absolute;
  right: -62rpx;
}
.content .list .item .goods .status image {
  width: 174rpx;
  height: 174rpx;
}
.content .list .item .bot {
  padding: 12rpx 0;
  border-top: solid 1px #F2F2F6;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .list .item .bot > text {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #686879;
}
.content .list .item .bot view text {
  display: inline-block;
  width: 130rpx;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  border: 1px solid #9393A7;
  border-radius: 4rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #686879;
}
.content .list .item .bot view > :nth-child(2) {
  margin: 0 20rpx;
}

