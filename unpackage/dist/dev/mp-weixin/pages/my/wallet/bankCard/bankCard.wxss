.content {
  padding: 20rpx 40rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.content .cardList .item {
  width: 100%;
  height: 170rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: #5468FF;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.content .cardList .item .type {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.content .cardList .item .type image {
  width: 48rpx;
  height: 48rpx;
}
.content .cardList .item .type text {
  margin-left: 15rpx;
}
.content .cardList .item .type > :nth-child(2) {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}
.content .cardList .item .type > :nth-child(3) {
  display: inline-block;
  width: 1rpx;
  height: 20rpx;
  background: #FFFFFF;
}
.content .cardList .item .type > :nth-child(4) {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
}
.content .cardList .item .number {
  width: 100%;
  text-align: center;
}
.content .cardList .item .number text {
  font-size: 38rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}
.content .add {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #F35455;
  border-radius: 45rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #F35455;
  background: #fff;
}
.content .add image {
  width: 44rpx;
  height: 44rpx;
}

