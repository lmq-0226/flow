.content .nav_bar {
  position: -webkit-sticky;
  position: sticky;
  top: 25px;
  background-color: #fff;
  z-index: 999;
}
.content .nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: -webkit-sticky;
  position: sticky;
  height: 100rpx;
  padding: 0 30rpx;
}
.content .nav image {
  width: 40rpx;
  height: 40rpx;
}
.content .nav text {
  font-weight: bold;
  color: #000000;
}
.content .nav .navMid {
  font-size: 32rpx;
}
.content .nav .navRit {
  font-size: 28rpx;
}
.content .tabs {
  border-top: solid 1px #f8f8f8;
  border-bottom: solid 10rpx #F6F5FA;
}
.content .list {
  padding: 0 36rpx;
}
.content .list .item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: solid 1px #efefef;
  padding: 20rpx 0;
}
.content .list .item .radio image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 17rpx;
}
.content .list .item .left {
  margin-right: 22rpx;
  position: relative;
}
.content .list .item .left image {
  width: 164rpx;
  height: 164rpx;
}
.content .list .item .left text {
  position: absolute;
  left: 0;
  top: 0;
  padding: 6rpx 12rpx;
  background: #F55454;
  border-top-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  font-size: 18rpx;
  font-weight: 500;
  color: #FFFFFF;
}
.content .list .item .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 164rpx;
}
.content .list .item .right > :nth-child(1) {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #000000;
  overflow: hidden;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.content .list .item .right > :nth-child(2) {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #6A6A79;
}
.content .list .item .right > :nth-child(3) {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #000000;
}
.content .bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  padding: 0 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-top: solid 1px #f8f8f8;
}
.content .bottom view {
  display: flex;
  align-items: center;
}
.content .bottom view image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 23rpx;
}
.content .bottom view text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #000000;
}
.content .bottom > text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  padding: 24rpx 82rpx;
  background: #F35455;
  border-radius: 10rpx;
}

