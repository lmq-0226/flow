.content {
  padding-bottom: 100rpx;
}
.content .pub {
  padding: 36rpx;
}
.content .pub .pubDetail {
  padding-bottom: 30rpx;
  border-bottom: solid 1px  #F7F7FB;
}
.content .pub .pubDetail .imgs {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.content .pub .pubDetail .imgs view {
  position: relative;
  margin-right: 17rpx;
}
.content .pub .pubDetail .imgs view > :nth-child(1) {
  height: 164rpx;
}
.content .pub .pubDetail .imgs view > :nth-child(2) {
  position: absolute;
  top: 0;
  right: 0;
  width: 35rpx;
  height: 35rpx;
}
.content .pub .pubDetail .imgs view text {
  position: absolute;
  padding: 8rpx 14rpx;
  background: #F55454;
  border-radius: 6rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  top: 0;
  left: 0;
}
.content .pub .pubDetail .imgs > image {
  width: 164rpx;
  height: 164rpx;
}
.content .pub .pubDetail .area {
  padding: 4rpx 9rpx;
  background: #F6F5FA;
  border-radius: 6rpx;
  margin-top: 20rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}
.content .pub .pubDetail .area image {
  width: 40rpx;
  height: 40rpx;
}
.content .pub .pubDetail .area text {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #1D1D20;
}
.content .pub .classify .lettle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0 14rpx;
}
.content .pub .classify .lettle view {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.content .pub .classify .lettle view text {
  margin-left: 10rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #1D1D20;
}
.content .pub .classify .lettle image {
  width: 44rpx;
  height: 44rpx;
}
.content .pub .classify .classitem {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.content .pub .classify .classitem .title {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #1D1D20;
  margin-right: 25rpx;
}
.content .pub .classify .classitem > :not(.title) {
  padding: 18rpx 28rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #686879;
  border: 3rpx solid #EDEDF2;
  border-radius: 10rpx;
  margin: 12rpx 12rpx 0rpx 0;
}
.content .pub .classify .active {
  background: linear-gradient(-34deg, #EE4647 0%, #FF7F7C 100%);
  border-radius: 10rpx;
  color: #fff !important;
}
.content .pub .price .num {
  margin-top: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .pub .price .num > :nth-child(1) {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.content .pub .price .num > :nth-child(1) text {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #1D1D20;
}
.content .pub .price .num > :nth-child(1) .u-input {
  flex: unset;
  min-width: 106rpx;
  width: 180rpx;
  background: #F6F5FA;
  border-radius: 10rpx;
  padding: 0 20rpx !important;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #000000;
}
.content .pub .price .num > :nth-child(2) {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.content .pub .price .num > :nth-child(2) text {
  display: inline-block;
  padding: 18rpx 28rpx;
  border: 3rpx solid #EDEDF2;
  border-radius: 10rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #686879;
  margin-left: 12rpx;
}
.content .bottom {
  width: 100%;
  height: 98rpx;
  border-top: solid 1px #f2f2f2;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  background: #fff;
}
.content .bottom view {
  text-align: center;
}
.content .bottom view image {
  width: 44rpx;
  height: 44rpx;
}
.content .bottom view text {
  display: block;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #000000;
}
.content .bottom > text {
  display: block;
  width: 557rpx;
  height: 74rpx;
  text-align: center;
  line-height: 74rpx;
  background: #F55454;
  border-radius: 6rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}

